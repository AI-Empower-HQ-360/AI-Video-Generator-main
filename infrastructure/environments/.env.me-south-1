# Middle East (Bahrain) - RTL Region
AWS_REGION=me-south-1
PRIMARY_REGION=false
FAILOVER_REGIONS=eu-west-1,ap-southeast-1

# Application Configuration
ENVIRONMENT=production
API_URL=https://api-me.ai-heart-platform.com
CDN_URL=https://cdn-me.ai-heart-platform.com
CDN_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://heartuser:${DB_PASSWORD}@me-south-1.cluster.amazonaws.com:5432/heartdb
REDIS_URL=redis://me-south-1.elasticache.amazonaws.com:6379

# Localization
SUPPORTED_LANGUAGES=ar-SA,en-US,fa-IR,he-IL
DEFAULT_LANGUAGE=ar-SA
SUPPORTED_CURRENCIES=USD,AED,SAR
DEFAULT_CURRENCY=USD
RTL_SUPPORT=true

# Compliance
COMPLIANCE_FRAMEWORKS=SOC2
GDPR_ENABLED=false
CCPA_ENABLED=false

# SSL and Security
SSL_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_CAPACITY=200

# Monitoring
MONITORING_ENABLED=true
LOGGING_LEVEL=INFO
METRICS_ENDPOINT=https://metrics-me.ai-heart-platform.com

# CDN and Caching
CACHE_TTL_STATIC=31536000
CACHE_TTL_API=300
CACHE_TTL_HTML=3600

# Payment Configuration
STRIPE_ACCOUNT_ID=acct_ae
PAYPAL_ACCOUNT_ID=paypal_ae
PAYMENT_PROVIDERS=stripe,paypal

# Regional Settings
TIMEZONE=Asia/Bahrain
DATE_FORMAT=DD/MM/YYYY
NUMBER_FORMAT=ar-SA
TAX_RATE=0.05
VAT_ENABLED=true

# RTL Specific Settings
TEXT_DIRECTION=rtl
LAYOUT_DIRECTION=rtl
FONT_FAMILY=Noto Sans Arabic,Arial Unicode MS,Tahoma