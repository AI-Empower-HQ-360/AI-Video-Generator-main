# EU West (Ireland) - European Region
AWS_REGION=eu-west-1
PRIMARY_REGION=false
FAILOVER_REGIONS=eu-central-1,us-east-1

# Application Configuration
ENVIRONMENT=production
API_URL=https://api-eu.ai-heart-platform.com
CDN_URL=https://cdn-eu.ai-heart-platform.com
CDN_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://heartuser:${DB_PASSWORD}@eu-west-1.cluster.amazonaws.com:5432/heartdb
REDIS_URL=redis://eu-west-1.elasticache.amazonaws.com:6379

# Localization
SUPPORTED_LANGUAGES=en-GB,de-DE,fr-FR,es-ES,it-IT
DEFAULT_LANGUAGE=en-GB
SUPPORTED_CURRENCIES=EUR,GBP
DEFAULT_CURRENCY=EUR

# Compliance
COMPLIANCE_FRAMEWORKS=GDPR,SOC2
GDPR_ENABLED=true
CCPA_ENABLED=false
DATA_RESIDENCY_REQUIRED=true
CROSS_BORDER_TRANSFER_ALLOWED=false

# SSL and Security
SSL_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=250
RATE_LIMIT_REQUESTS_PER_MINUTE=2500
RATE_LIMIT_BURST_CAPACITY=500

# Monitoring
MONITORING_ENABLED=true
LOGGING_LEVEL=INFO
METRICS_ENDPOINT=https://metrics-eu.ai-heart-platform.com

# CDN and Caching
CACHE_TTL_STATIC=31536000
CACHE_TTL_API=300
CACHE_TTL_HTML=3600

# Payment Configuration
STRIPE_ACCOUNT_ID=acct_eu
PAYPAL_ACCOUNT_ID=paypal_eu
PAYMENT_PROVIDERS=stripe,paypal

# Regional Settings
TIMEZONE=Europe/Dublin
DATE_FORMAT=DD/MM/YYYY
NUMBER_FORMAT=en-GB
TAX_RATE=0.20
VAT_ENABLED=true

# GDPR Specific
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_PERIOD=2_years
BREACH_NOTIFICATION_AUTHORITY=DPC_Ireland
BREACH_NOTIFICATION_TIMELINE=72_hours