# US East (Virginia) - Primary Region
AWS_REGION=us-east-1
PRIMARY_REGION=true
FAILOVER_REGIONS=us-west-2,eu-west-1

# Application Configuration
ENVIRONMENT=production
API_URL=https://api-us.ai-heart-platform.com
CDN_URL=https://cdn-us.ai-heart-platform.com
CDN_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://heartuser:${DB_PASSWORD}@us-east-1.cluster.amazonaws.com:5432/heartdb
REDIS_URL=redis://us-east-1.elasticache.amazonaws.com:6379

# Localization
SUPPORTED_LANGUAGES=en-US,es-ES
DEFAULT_LANGUAGE=en-US
SUPPORTED_CURRENCIES=USD
DEFAULT_CURRENCY=USD

# Compliance
COMPLIANCE_FRAMEWORKS=SOC2,HIPAA
GDPR_ENABLED=false
CCPA_ENABLED=true

# SSL and Security
SSL_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=400
RATE_LIMIT_REQUESTS_PER_MINUTE=4000
RATE_LIMIT_BURST_CAPACITY=800

# Monitoring
MONITORING_ENABLED=true
LOGGING_LEVEL=INFO
METRICS_ENDPOINT=https://metrics-us.ai-heart-platform.com

# CDN and Caching
CACHE_TTL_STATIC=31536000
CACHE_TTL_API=300
CACHE_TTL_HTML=3600

# Payment Configuration
STRIPE_ACCOUNT_ID=acct_us
PAYPAL_ACCOUNT_ID=paypal_us
PAYMENT_PROVIDERS=stripe,paypal

# Regional Settings
TIMEZONE=America/New_York
DATE_FORMAT=MM/DD/YYYY
NUMBER_FORMAT=en-US
TAX_RATE=0.08