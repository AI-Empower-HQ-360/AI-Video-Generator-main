# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
DEBUG=True

# Database
DATABASE_URL=sqlite:///spiritual_platform.db

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Cost Management Settings
COST_DAILY_LIMIT=10.0
COST_MONTHLY_LIMIT=100.0
TOKEN_DAILY_LIMIT=10000
TOKEN_MONTHLY_LIMIT=100000
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Alert Thresholds
ALERT_DAILY_COST_THRESHOLD=10.0
ALERT_MONTHLY_COST_THRESHOLD=100.0

# Redis (for session storage)
