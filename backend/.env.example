# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production-use-strong-key
JWT_SECRET_KEY=your-jwt-secret-key-different-from-flask-secret
FLASK_ENV=development
DEBUG=True

# Database
DATABASE_URL=sqlite:///spiritual_platform.db

# OpenAI API (CRITICAL: Use proper API key format)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379

# CORS Origins (comma-separated, be restrictive in production)
CORS_ORIGINS=https://empowerhub360.org,https://ai-empower-hq-360.github.io,https://www.empowerhub360.org

# Security Configuration
SECURITY_HEADERS_ENABLED=True
CSRF_PROTECTION_ENABLED=True
CONTENT_SECURITY_POLICY_ENABLED=True

# Rate Limiting (requests per time period)
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_AUTH=10 per minute
RATE_LIMIT_GURU_ASK=50 per hour
RATE_LIMIT_FILE_UPLOAD=20 per hour
RATE_LIMIT_PASSWORD_RESET=5 per hour

# File Upload Security
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
UPLOAD_FOLDER=/secure/uploads
ALLOWED_EXTENSIONS=txt,json,md,pdf,doc,docx

# Session Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
JWT_ALGORITHM=HS256

# Email Configuration (for notifications and password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your-ga-id
SECURITY_LOGGING_ENABLED=True
SUSPICIOUS_ACTIVITY_MONITORING=True

# API Security
API_KEY_VALIDATION_ENABLED=True
REQUEST_LOGGING_ENABLED=True

# Development Settings (remove in production)
# These settings are more permissive for development
DEVELOPMENT_CORS_ENABLED=True
DEVELOPMENT_RATE_LIMIT_DISABLED=False

# Production Security Settings (uncomment for production)
# FLASK_ENV=production
# DEBUG=False
# SESSION_COOKIE_SECURE=True
# SECURITY_HEADERS_ENABLED=True
# CSRF_PROTECTION_ENABLED=True
# RATE_LIMIT_DEFAULT=60 per hour
# RATE_LIMIT_AUTH=5 per minute
# RATE_LIMIT_GURU_ASK=30 per hour

# Important Security Notes:
# 1. Change all default secrets and keys before deployment
# 2. Use environment-specific configuration files
# 3. Keep this file secure and never commit it to version control
# 4. Use strong, unique passwords and API keys
# 5. Enable HTTPS in production and set SESSION_COOKIE_SECURE=True
# 6. Regularly rotate secrets and API keys
# 7. Monitor logs for security events
# 8. Use a proper secret management system in production
