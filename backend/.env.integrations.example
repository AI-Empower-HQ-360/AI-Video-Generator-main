# Integration Configuration
"""
Configuration settings for third-party integrations.
Copy this file to .env and update with your credentials.
"""

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET_KEY=your-webhook-secret-key-here

# =============================================================================
# ZAPIER INTEGRATION
# =============================================================================
ZAPIER_WEBHOOK_BASE_URL=https://hooks.zapier.com/hooks/catch

# =============================================================================
# MESSAGING INTEGRATIONS
# =============================================================================

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_DEFAULT_CHANNEL=#videos

# Microsoft Teams Configuration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX@XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX/IncomingWebhook/XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX/XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/XXXXXXXXXXXXXXXXXX/XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DISCORD_BOT_TOKEN=your-discord-bot-token

# =============================================================================
# CRM INTEGRATIONS
# =============================================================================

# Salesforce Configuration
SALESFORCE_INSTANCE_URL=https://yourinstance.salesforce.com
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password-and-token

# HubSpot Configuration
HUBSPOT_API_KEY=your-hubspot-api-key

# =============================================================================
# CMS INTEGRATIONS
# =============================================================================

# WordPress Configuration
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your-wp-username
WORDPRESS_PASSWORD=your-wp-app-password

# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=yourshop
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# ANALYTICS INTEGRATIONS
# =============================================================================

# Google Analytics (GA4) Configuration
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your-ga4-api-secret

# Facebook Pixel Configuration
FB_PIXEL_ID=123456789012345
FB_ACCESS_TOKEN=your-facebook-access-token

# =============================================================================
# INTEGRATION FEATURES
# =============================================================================

# Enable/Disable specific integrations
ENABLE_WEBHOOK_INTEGRATIONS=true
ENABLE_ZAPIER_INTEGRATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_TEAMS_INTEGRATION=true
ENABLE_DISCORD_INTEGRATION=true
ENABLE_SALESFORCE_INTEGRATION=true
ENABLE_HUBSPOT_INTEGRATION=true
ENABLE_WORDPRESS_INTEGRATION=true
ENABLE_SHOPIFY_INTEGRATION=true
ENABLE_GOOGLE_ANALYTICS=true
ENABLE_FACEBOOK_PIXEL=true

# Notification settings
SEND_VIDEO_NOTIFICATIONS=true
TRACK_VIDEO_ANALYTICS=true
SYNC_CRM_DATA=true
PUBLISH_TO_CMS=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Webhook retry settings
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT_SECONDS=30

# Analytics tracking settings
TRACK_USER_ENGAGEMENT=true
TRACK_CONVERSION_EVENTS=true
TRACK_CUSTOM_EVENTS=true

# CRM sync settings
CRM_SYNC_LEADS=true
CRM_SYNC_OPPORTUNITIES=true
CRM_LOG_ACTIVITIES=true

# CMS publishing settings
WORDPRESS_AUTO_PUBLISH=false
SHOPIFY_UPDATE_DESCRIPTIONS=true
CMS_CREATE_THUMBNAILS=true